					<HBox>
						<spacing>10</spacing>
						<children>				<!-- 자식 컨트롤 추가 -->
							<Label text="비 고 : " prefWidth="75" alignment="CENTER" />
							<TextArea fx:id="c_txtRemarks" prefWidth="220"
