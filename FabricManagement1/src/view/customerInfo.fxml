						<children>				<!-- 자식 컨트롤 추가 -->
							<Button fx:id="c_btnRegist">등 록</Button>
							<Button fx:id="c_btnInit">초기화</Button>
							<Button fx:id="c_btnUpdate">수 정</Button>
