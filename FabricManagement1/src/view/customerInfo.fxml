						</children>
					</HBox>

					<HBox>
						<spacing>10</spacing>
						<children>				<!-- 자식 컨트롤 추가 -->
							<Label text="연락처 : " prefWidth="75" alignment="CENTER" />
							<TextField fx:id="c_txtPhone" prefWidth="220"
								promptText="연락처" />
						</children>
					</HBox>

					<HBox>
						<spacing>10</spacing>
						<children>				<!-- 자식 컨트롤 추가 -->
							<Label text="주 소 : " prefWidth="75" alignment="CENTER" />
							<TextField fx:id="c_txtAddress" prefWidth="220"
								promptText="주 소" />
