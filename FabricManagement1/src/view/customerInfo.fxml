<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
	prefHeight="300" prefWidth="1200" fx:controller="control.CustomerController">
	<HBox>
		<children>
			<VBox>
				<padding>
					<Insets top="10" right="10" bottom="10" left="10" />
				</padding>
				<spacing>10</spacing>
				<children>

					<HBox alignment="CENTER"> 		   				<!-- HBox 컨테이너 선언 -->
