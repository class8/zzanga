					<HBox alignment="center">
						<spacing>20</spacing>
						<children>				<!-- 자식 컨트롤 추가 -->
							<Button fx:id="c_btnDelete">삭 제</Button>
							<Button fx:id="c_btnExit">종 료</Button>
